%p.text-success#notice= notice
%p.text-danger#error= flash[:error]

%p
  %b Title:
  %div.col-md-12
    %span.col-md-6= product.title
%p
  %b Description:
  %div.col-md-12
    %span.col-md-6= product.description
%p
  %b Price:
  %div.col-md-12
    %span.col-md-6= product.price

%p
  %b Category
  %div.col-md-12
    %span.col-md-6= product.category.name

%h3 Reviews
%div.col-md-12
  %div.col-md-12
    = render 'reviews/form'

  %div.col-lg-offset-4.col-md-5
    = render reviews

%div.col-md-2
  = link_to url_for(:back) do
    %span.btn.btn-primary Back

  = link_to edit_category_product_path(category.id, product.id) do
    %span.btn.btn-primary Edit
